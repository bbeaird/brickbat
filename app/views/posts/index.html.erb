<div class="container">
  <header>
    <h1>Brickbat</h1>
    <nav>
    </nav>
  </header>
  <div class="new_post">
    <h2>Request a tweet:</h2>
    <%= form_for :post do |f| %>
      <%= f.text_field :title %>
      <%= f.text_area :body %>

      <%= f.submit "Request Brickbats" %>
    <% end %>
  </div>


  

  <div class="posts">
    <h2>Posts</h2>
    <% if @posts != [] %>
      <% @posts.each do |post| %>
        <%= link_to "#{post.title}", post_path(post.id) %>
      <% end %>
    <% else %>
      <p>There are no posts to display.</p>
    <% end %>
  </div>
</div>
