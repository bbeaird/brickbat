  <div id="posts">

    <h1>Posts</h1>
    <hr>

    <% unless @posts.empty? %>
    
    <ul>
      <% @posts.each do |post| %>

        <%= link_to post_path(post.id) do %> 
          <li><p>
            <span id='index_title'><%= post.title %></span>
            <span id='index_author'><%= link_to '@' + post.user.username, 'https://twitter.com/' + post.user.username, target: '_blank' %></span>
            <ul>
              <li><span id='index_responses'><%= post.responses.count %> responses</span></li>
              <li><span id='index_responses'>1 hour left</span></li>
            </ul>
          </p></li>
        <% end %>

      <% end %>
    </ul>

    <% else %>
    <p>There are no posts to display.</p>
    <% end %>

    <hr>
  </div>
