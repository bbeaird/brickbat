<div id='show_post'>
  <h1><%= @post.title %></h1>
  <hr>
  <p id="show_post_body"><%= @post.body %> <span id="poster">@postdude</span></p>
  <hr>


  <% if session[:user_id] %>
  <%= form_for @response, url: responses_path do |f| %>
  <p>Submit a new response</p>

  <div><%= f.text_field :body %></div>
  <%= hidden_field_tag :post_id, "#{@post.id}" %>
  <div><%= f.submit "Submit new Response" %></div>
  <% end %>
  <% else %>
  <div id="nonuser">
    Please <%=link_to "Login with Twitter", "/auth/twitter" %> to respond to posts.
  </div><% end %>

  <div id="all_responses">
    <% if @post %>
    <% @post.responses.each do |response| %>
    <div class="post_responses">
      <span class="response_votes"><%= response.votes %></span> 
      <span class="response_body"><%= response.body %></span>
      <span class="response_author">@duder</span>
    </div>
    <% end %>
    <% else %>
    <p>There are no responses yet.</p>
    <% end %>
  </div>

</div>