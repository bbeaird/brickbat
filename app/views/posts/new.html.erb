	<div id="new_post">

		<h1>Create a New Post</h1>

		<%= form_for :post, url: posts_path, html: { class: 'pure-form' } do |f| %>
    <div id='form-content'>

		<div id='input-title'>
      <%= f.label :title %>
      <%= f.text_field :title %>      
    </div>

    <div id='input-extras'>
      <span class='input-prepend'>@</span>
      <%= text_field_tag :mention %>      
      <span class='input-prepend'>#</span>
      <%= text_field_tag :hashtag %>  
      <%= label_tag :countdown, 'Countdown' do %>    
        <%= select_tag :countdown, options_for_select(['1 hour', '2 hours', '3 hours']) %>
      <% end %>
    </div>

		<div id="post-body-div">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10 %>
    </div>
  </div>
		<div><%= f.submit "Create" %></div>
		<% end %>

	</div>




